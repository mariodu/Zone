#topbar
  .container
    .logo
      = link_to "Zone", root_path
    %ul.nav.nav-pills
      %li{:class => (controller_name == 'home' ? 'active' : nil)}
        = link_to t('home'), root_path
      %li.dropdown{:class => (controller_name == 'topics' ? 'active' : nil)}
        %a{:href => "topics_path", :class => 'dropdown-toggle', 'data-toggle' => 'dropdown', 'data-target' => '#'}
          = t('.topics')
          %b.caret
        %ul.dropdown-menu
          %li= link_to t('.active'), "topics_path"
          %li= link_to t('.newest'), "newest_topics_path"
          - if true || logined?
            %li= link_to t('.marked'), "marked_topics_path"
            %li= link_to t('.my'), "my_topics_path"
            %li= link_to t('.replied'), "replied_topics_path"
      %li{:class => (controller_name == 'search' ? 'active' : nil)}
        = link_to t('.search'), "search_path"
    %ul.nav.nav-pills.pull-right
      - if user_signed_in?
        %li.dropdown
          %a{:href => "/", :class => 'dropdown-toggle', 'data-toggle' => 'dropdown', 'data-target' => '#'}
            = current_user.name
            %b.caret
          %ul.dropdown-menu
            %li
              = link_to t('user.info'), "user_path(current_user)"
            %li
              = link_to t('user.settings'), "settings_account_path"
            %li.divider
            %li
              = link_to t('user.zone'), "user_path(current_user)"
            - if current_user.admin?
              %li.divider
              %li
                = link_to t('admin'), "admin_dashboard_path"
        %li
          = link_to t('logout'), destroy_user_session_path, confirm: 'Are you sure?', method: :delete
      - else
        %li
          %a{:href => user_omniauth_authorize_path(:renren)}
            %img{:src => "http://wiki.dev.renren.com/mediawiki/images/a/a2/%E8%BF%9E%E6%8E%A5%E6%8C%89%E9%92%AE2_%E8%93%9D%E8%89%B2133x22.png"}
        %li
          = link_to t('signup'), new_registration_path(:user)
        %li
          = link_to t('login'), new_session_path(:user)