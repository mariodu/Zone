
#main
  .container
    .row
      .span10.box
        %section#signup-form
          = form_for @user, :url => update_complete_info_users_path, :html => { :class => "form-horizontal" }, :validate => true do |f|
            %legend= t('signup_legent')
            .control-group
              = f.label :email, t('user.email'), :class => 'control-label'
              .controls
                = f.text_field :email, :placeholder => "Email", :class => 'input-xlarge'
                %span.help-block= t('user.form_helper.email')
            .control-group
              = f.label :password, t('user.password'), :class => 'control-label'
              .controls
                = f.password_field :password, :placeholder => "Password"
            .control-group
              = f.label :password_confirmation, t('user.password_confirmation'), :class => 'control-label'
              .controls
                = f.password_field :password_confirmation, :placeholder => "Password"
              .form-actions
                = f.submit t('commit_signup_info'), :class => 'btn btn-primary'