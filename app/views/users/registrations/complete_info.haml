
#main
  .container
    .row
      .span10.box
        %section#signup-form
          = form_for @user, :url => users_update_complete_info_path, :html => { :class => "form-horizontal" }, :validate => true do |f|
            %legend= t('user.complete_info')
            .control-group
              = f.label :email, t('user.email'), :class => 'control-label'
              .controls
                = f.text_field :email, :placeholder => "Email", :class => 'input-xlarge'
                %span.help-block= t('user.form_helper.email')
            .control-group
              = f.label :password, t('user.password'), :class => 'control-label'
              .controls
                = f.password_field :password, :placeholder => "Password"
            .control-group
              = f.label :password_confirmation, t('user.password_confirmation'), :class => 'control-label'
              .controls
                = f.password_field :password_confirmation, :placeholder => "Password"
            - unless @user.school
              .control-group
                = f.label :school_id, t('user.school'), :class => 'control-label'
                .controls
                  = f.select :school_id, School.all.collect {|s| [ s.name, s.id.to_i ] }, { :include_blank => true }
            .form-actions
              = f.submit t('user.complete_info'), :class => 'btn btn-primary'