
#main
  .container
    .row
      .span10.box
        %section#signup-form
          = form_for resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-horizontal" }, :validate => true do |f|
            %legend= t('user.signup')
            .control-group
              = f.label :name, t('user.name'), :class => 'control-label'
              .controls
                = f.text_field :name, :placeholder => "Name"
                %span.help-block= t('user.form_helper.name')
            .control-group
              = f.label :email, t('user.email'), :class => 'control-label'
              .controls
                = f.text_field :email, :placeholder => "Email", :class => 'input-xlarge'
                %span.help-block= t('user.form_helper.email')
            .control-group
              = f.label :public_email, t('user.public_email'), :class => 'control-label'
              .controls
                = f.check_box :public_email
            .control-group
              = f.label :password, t('user.password'), :class => 'control-label'
              .controls
                = f.password_field :password, :placeholder => "Password"
            .control-group
              = f.label :password_confirmation, t('user.password_confirmation'), :class => 'control-label'
              .controls
                = f.password_field :password_confirmation, :placeholder => "Password"
              .form-actions
                = f.submit t('user.commit_signup_info'), :class => 'btn btn-primary'