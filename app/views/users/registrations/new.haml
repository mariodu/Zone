
#main
  .container
    .row
      .span10.box
        %section#signup-form
          = form_for resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-horizontal" }, :validate => true do |f|
            %legend= t('signup')
            .control-group
              = f.label :name, t('user.name'), :class => 'control-label'
              .controls
                = f.text_field :name, :tabIndex => 1, :placeholder => "Name"
            .control-group
              = f.label :email, t('user.email'), :class => 'control-label'
              .controls
                = f.text_field :email, :tabIndex => 2, :placeholder => "Email"
            .control-group
              = f.label :password, t('user.password'), :class => 'control-label'
              .controls
                = f.password_field :password, :tabIndex => 3, :placeholder => "Password"
            .control-group
              = f.label :password_confirmation, t('user.password_confirmation'), :class => 'control-label'
              .controls
                = f.password_field :password_confirmation, :tabIndex => 4, :placeholder => "Password"
              .form-actions
                = f.submit t('signup'), :class => 'btn btn-primary', :tabIndex => 5