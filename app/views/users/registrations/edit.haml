%h2
  Edit #{resource_name.to_s.humanize}
= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
  = devise_error_messages!
  %div
    = f.label :email
    %br/
    = f.email_field :email
  %div
    = f.label :password
    %i (leave blank if you don't want to change it)
    %br/
    = f.password_field :password, :autocomplete => "off"
  %div
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation
  %div
    = f.label :current_password
    %i (we need your current password to confirm your changes)
    %br/
    = f.password_field :current_password
  %div= f.submit "Update"
%h3 Cancel my account
%p
  Unhappy? #{link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete}.
= link_to "Back", :back

#main
  .container
    .row
      .span10.box
        %section#signup-form
          = form_for resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-horizontal", :method => :put }, :validate => true do |f|
            %legend= t('signup_legent')
            .control-group
              = f.label :name, t('user.name'), :class => 'control-label'
              .controls
                = f.text_field :name, :placeholder => "Name"
                %span.help-block= t('user.form_helper.name')
            .control-group
              = f.label :email, t('user.email'), :class => 'control-label'
              .controls
                = f.text_field :email, :placeholder => "Email", :class => 'input-xlarge'
                %span.help-block= t('user.form_helper.email')
            .control-group
              = f.label :public_email, t('user.public_email'), :class => 'control-label'
              .controls
                = f.check_box :public_email
            .control-group
              = f.label :password, t('user.password'), :class => 'control-label'
              .controls
                = f.password_field :password, :placeholder => "Password"
            .control-group
              = f.label :password_confirmation, t('user.password_confirmation'), :class => 'control-label'
              .controls
                = f.password_field :password_confirmation, :placeholder => "Password"
              .form-actions
                = f.submit t('commit_signup_info'), :class => 'btn btn-primary'
