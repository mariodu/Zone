%section.profile.box
  .clearfix
    .avatar
      = link_avatar_to_user current_user, :size => 64
    .info
      = t '.signed_as'
      %h3= current_user.name
  %hr
  .notifications
    - count = 1 || current_user.notifications.unread.count
    = content_tag 'a', :href => "notifications_path", :class => (count > 0 ? nil : 'read') do
      %span.count= count
      = t('.unread_notifications')
